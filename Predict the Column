  // code here 
        int maxCount=0;
        int ans=-1;
        for(int i=0; i<N; ++i){
            int count=0;
            for(int j=0; j<N; ++j){
                if(arr[j][i]==0) count++;
            }

            if(maxCount<count){
                ans=i;
                maxCount=count;
            }
        }
        return ans;
